<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewMatchForm">

    <Spinner
        android:id="@+id/match_opponents_list"
        android:layout_width="200dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.3"
        />

    <EditText
        android:id="@+id/result"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:hint="Risultato"
        app:layout_constraintBottom_toTopOf="@+id/match_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/match_opponents_list" />

    <Button
        android:id="@+id/match_date"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textColor="@color/black"
        style="?android:spinnerStyle"
        app:layout_constraintBottom_toTopOf="@+id/add_match"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result"/>

    <Button
        android:id="@+id/add_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiungi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/match_date"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>