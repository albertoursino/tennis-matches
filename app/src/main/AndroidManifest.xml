<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.tennismatches">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TennisMatches"
        tools:targetApi="31">
        <activity
            android:name=".NewOpponent"
            android:exported="false"
            android:label="Nuovo avversario"/>
        <activity
            android:name=".PersonalPage"
            android:exported="false"
            android:label="Pagina personale" />
        <activity
            android:name=".OpponentsPage"
            android:exported="false"
            android:label="Lista avversari" />
        <activity
            android:name=".MatchesPage"
            android:exported="false"
            android:label="Lista partite" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.TennisMatches.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>